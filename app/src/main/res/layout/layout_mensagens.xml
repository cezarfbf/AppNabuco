<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="3dp"
    android:background="#130b9dc3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Professor"
        android:id="@+id/professor_mensagem"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/mensagem"
        android:background="@drawable/balao"
        android:paddingLeft="50dp"
        android:paddingTop="5dp"
        android:paddingRight="3dp"
        android:paddingBottom="5dp"
        android:layout_below="@+id/professor_mensagem"
        android:textColor="#b40e2b70"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="data/hora"
        android:id="@+id/data_mensagem"
        android:layout_below="@+id/mensagem"
        android:layout_alignRight="@+id/mensagem" />


</RelativeLayout>