<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/matricula"
        android:hint="Matricula"
        android:textAlignment="center"
        android:textSize="20dp"
        android:focusable="true"
        android:gravity="center"
        android:backgroundTint="#ff3324f1"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:numeric="integer"
        android:inputType="number"
        android:clickable="false"
        android:layout_marginTop="-60dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/senha"
        android:hint="Senha"
        android:textSize="20dp"
        android:gravity="center"
        android:backgroundTint="#ff3324f1"
        android:layout_below="@+id/matricula"
        android:layout_alignParentRight="true"
        android:password="true"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AppNabuco"
        android:id="@+id/titulo_appnabuco"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginBottom="-70dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/titulo_appnabuco"
        android:src="@drawable/logo_fjn"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_margin="80dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_entrar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_entrar"
        android:layout_below="@+id/senha"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20dp" />




</RelativeLayout>