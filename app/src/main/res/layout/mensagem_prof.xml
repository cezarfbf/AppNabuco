<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:id="@+id/relative_msg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mensagem_tv"
        android:background="@drawable/postit"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000"
        android:padding="50dp"
        android:textStyle="bold"
        android:textSize="20dp" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:id="@+id/mensagem_editText"
        android:layout_marginBottom="41dp"
        android:inputType="textLongMessage"
        android:hint="Digite uma mensagem"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/mensagem_button"
        android:layout_alignTop="@+id/mensagem_editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/mensagem_editText"
        android:background="@drawable/enviar" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="menu"
        android:id="@+id/voltar_msg"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/mensagem_editText"
        android:layout_marginTop="-40dp" />

</RelativeLayout>